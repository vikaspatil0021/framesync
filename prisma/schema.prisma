generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String           @id @default("")
  name           String
  email          String           @unique
  picture        String
  authProvider   AuthProvider
  authProviderId String
  TeamMembership TeamMembership[]
  Media          Media[]
  Comment        Comment[]
}

model Team {
  id             String           @id @default("")
  name           String
  invite         Invite[]
  project        Project[]
  TeamMembership TeamMembership[]
}

model TeamMembership {
  id       String         @id @default("")
  role     MembershipRole
  accepted Boolean        @default(false)
  userId   String
  teamId   String
  team     Team           @relation(fields: [teamId], references: [id])
  user     User           @relation(fields: [userId], references: [id])

  @@unique([userId, teamId])
}

model Invite {
  id        String   @id @default("")
  email     String
  teamId    String
  expiresAt DateTime
  team      Team     @relation(fields: [teamId], references: [id])

  @@unique([email, teamId])
}

model Project {
  id     String  @id @default("")
  name   String
  teamId String
  team   Team    @relation(fields: [teamId], references: [id])
  Media  Media[]
}

model Media {
  id          String    @id @default("")
  key         String
  name        String
  size        Int
  duration    Float
  uploaded_at DateTime  @default(now())
  type        MediaType
  uploaderId  String
  projectId   String
  project     Project   @relation(fields: [projectId], references: [id])
  user        User      @relation(fields: [uploaderId], references: [id])
}

model Comment {
  id        String   @id @default("")
  msg       String
  mediaId   String
  timeStamp Int?
  date      DateTime @default(now())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
}

enum MediaType {
  VideoFile
  Folder
}

enum AuthProvider {
  Google
  Github
}

enum MembershipRole {
  OWNER
  MEMBER
}
